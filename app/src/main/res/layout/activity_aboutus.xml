<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aboutus"
    android:orientation="vertical"
    android:background="@color/colorPrimary"

    >
    
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="This is a simple mobile application made for online food delivary in efficient way."
    android:textColor="#fff"
    android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developers of app:"
        android:textColor="#fff"
        android:textStyle="italic"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bhupesh Joshi"
            android:textColor="#fff"
            android:textStyle="bold"/>

        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="135dp"
        android:src="@drawable/bhupesh"
        android:adjustViewBounds="true"

        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Krishal Manandhar"
            android:textColor="#fff"
            android:textStyle="bold"/>

        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="135dp"
        android:src="@drawable/krishal"
        android:adjustViewBounds="true"

        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ankit Gyawali"
            android:textColor="#fff"
            android:textStyle="bold"/>

        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="135dp"
        android:src="@drawable/ankit"
        android:adjustViewBounds="true"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Charchit Nemkul"
            android:textColor="#fff"
            android:textStyle="bold"/>

        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="135dp"
        android:src="@drawable/charchit"
        android:adjustViewBounds="true"
        />
        
    </LinearLayout>

</LinearLayout>